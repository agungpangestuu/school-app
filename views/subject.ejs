<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject</title>
    <style media="screen">
      h2{
        text-align: center;
      }
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      form{
        text-align: center;
        padding: 20px
      }
    </style>
  </head>
  <body>
    <h2>All Subjects Data</h2><br>
    <table>
      <thead>
        <tr>
          <td>ID</td>
          <td>SUBJECT NAME</td>
          <td>TEACHERS</td>
          <td>ACTIONS</td>
        </tr>
      </thead>
      <%subject.forEach(dt=>{%>
        <tr>
          <td><%=dt.id%></td>
          <td><%=dt.subject_name%></td>
          <td>
            <ol>
              <% dt.teacher.forEach(data=>{ %>
                <li><%=`${data.first_name} ${data.last_name}`%></li>
              <% })%>
            </ol>
          </td>
          <td><a href="/subject/<%=dt.id%>/enrolledstudents">Enrolled Student</a></td>
        </tr>
      <%})%>
    </table>
  </body>
</html>
